root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 120
tab_width = 4
block_comment_start = /*
block_comment = *
block_comment_end = */

[*.md]
#indent_size = 2
trim_trailing_whitespace = false
max_line_length = 500

[*.{yml,yaml}]
indent_size = 2

[yarn.lock]
indent_size = 2
max_line_length = unset

[*.svg]
max_line_length = unset
